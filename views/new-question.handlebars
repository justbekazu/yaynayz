<div class="container-fluid mt-3">
  <form class="new-question-form">
  <div class="form-group blue-border">
    <h5><strong>Create New Question</strong></h5>
    <input class="form-control" id="question-title" name="question-title" rows="1" aria-label="Title"/>
  </div>
  <div class="form-group blue-border">
    <h5><strong>Shortcode</strong></h5>
    <input class="form-control" id="question-shortcode" name="question-shortcode" rows="1" aria-label="Shortcode"/>
  </div>
  <div class="col text-start mt-3">
    <a class="btn btn-warning" href="/dashboard" role="button">Cancel</a>
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
  </form>
</div>

<script>
var btnActive = document.getElementById("dashboardNav");
btnActive.className+= " active";

var randomletter = String.fromCharCode(97+Math.floor(Math.random() * 26))

arr=[]
while(arr.length < 3) {
var randomnumber = Math.floor(Math.random()*10)
if(arr.indexOf(randomnumber) > -1) continue;
arr[arr.length] = randomnumber;
}
document.getElementById("question-shortcode").value = arr.join('')+randomletter;

</script>

<script src="/javascript/add-question.js"></script>