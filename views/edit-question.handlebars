<div class="container-fluid mt-3">

  <form class="edit-question-form">

    <div class="form-group blue-border">
      <h5><strong>Edit Question</strong></h5>
      <input class="form-control" id="question-title" name="question-title" rows="1" aria-label="Title"
        value="{{question.title}}" />
    </div>
    <div class="row mt-3 mb-3">
      <div class="col">
        <a class="btn btn-warning" href="/dashboard" role="button">Cancel</a>
        <button class="btn btn-primary" type="submit">Update Question</button>
      </div>
      <div class="col text-end">
        <button type="button" class="btn btn-danger delete-question-btn">Delete Question</button>
      </div>
    </div>

  </form>
</div>

<script>
var btnActive = document.getElementById("dashboardNav");
btnActive.className+= " active";
</script>

<script src="/javascript/edit-question.js"></script>
<script src="/javascript/delete-question.js"></script>